{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "global-require": "off",
    "comma-dangle": "off",
    "arrow-parens": "off",
    "no-param-reassign": "off",
    "no-console": "off",
    "import/no-dynamic-require": "off",
    "no-plusplus": "off",
    "no-prototype-builtins": "off",
    "react/destructuring-assignment": "off"
  },
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ]
}
